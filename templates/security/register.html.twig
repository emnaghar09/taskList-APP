
    
{% block body %}
<style>
    body {
        height: 100vh;
        margin: 0;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        background: #d9a7c7;
        background: -webkit-linear-gradient(to right, #fffcdc, #d9a7c7);
        background: linear-gradient(to right, #fffcdc, #d9a7c7);
        font-family: 'Arial', sans-serif;
    }

    .form-container {
        background: #fff;
        padding: 30px 20px;
        border-radius: 12px;
        box-shadow: 0 8px 15px rgba(0, 0, 0, 0.2);
        max-width: 400px;
        width: 100%;
        text-align: center;
    }

    .form-container h1 {
        font-size: 1.8rem;
        margin-bottom: 20px;
        color: #444;
    }

    .form-container label {
        font-size: 0.9rem;
        color: #666;
        font-weight: 500;
        display: block;
        text-align: left;
        margin-bottom: 8px;
    }

    .form-container input {
        width: 100%;
        padding: 10px;
        margin-bottom: 15px;
        border: 1px solid #ddd;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

    .form-container input:focus {
        border-color: #ad5389;
        outline: none;
        box-shadow: 0 0 4px rgba(173, 83, 137, 0.5);
    }

    .btn-custom {
        background-color: #ad5389;
        color: white;
        border: none;
        padding: 10px 15px;
        border-radius: 8px;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        width: 100%;
        transition: background-color 0.3s ease;
    }

    .btn-custom:hover {
        background-color: #c490b2;
    }

    .alert-danger {
        color: #721c24;
        background-color: #f8d7da;
        border-color: #f5c6cb;
        padding: 10px;
        border-radius: 8px;
        margin-bottom: 15px;
        font-size: 0.9rem;
    }

    .form-container a {
        color: #ad5389;
        text-decoration: none;
        font-weight: 600;
    }

    .form-container a:hover {
        text-decoration: underline;
    }

</style>
<div class="container mt-5">
   
    
    <div class="form-container">
        
         <h1 class="text-center mb-4">Cr√©er un compte</h1>
         
         {{ form_start(form) }}
        
        <div class="mb-3">
            {{ form_label(form.email, 'Adresse Email', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Entrez votre email'}}) }}
            {{ form_errors(form.email) }}
        </div>
        
        <div class="mb-3">
            {{ form_label(form.password, 'Mot de passe', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.password, {'attr': {'class': 'form-control', 'placeholder': 'Entrez votre mot de passe'}}) }}
            {{ form_errors(form.password) }}
        </div>
        
        <button type="submit" class="btn btn-custom w-100">S'inscrire</button>
        
        {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
